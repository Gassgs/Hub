metadata {
    definition (name: "Virtual Multi Sensor Plus", namespace: "Gassgs", author: "Gary G") {
        capability "Switch"
        capability "Sensor"
        capability "ContactSensor"
        capability "Motion Sensor"
        capability "WaterSensor"
        capability "PresenceSensor"
        capability "SoundSensor"
        capability "TemperatureMeasurement"
        capability "RelativeHumidityMeasurement"
        
        command "setContact", ["string"]
        command "setContacts", ["string"]
        command "setMotion", ["string"]
        command "setMotionSensors", ["string"]
        command "setWater", ["string"]
        command "setWaterSensors", ["string"]
        command "setSound", ["string"]
        command "setSoundSensors", ["string"]
        command "setPresence", ["string"]
        command "setPresenceSensors", ["string"]
        command "setLock", ["string"]
        command "setLocks", ["string"]
        command "setTemperature", ["decimal"]
        command "setHumidity", ["decimal"]
      
        attribute"Contacts","string"
        attribute"Motion_Sensors","string"
        attribute"Water_Sensors","string" 
        attribute"Person_Detected","string"    
        attribute"Sound_Heard","string"    
        attribute"lock","string" 
        attribute"Locks","string" 
        
    }
}

def on() {
    log.info "Switch_On"
    sendEvent(name: "switch", value: "on")
}

def off() {
    log.info "Switch_Off"
    sendEvent(name: "switch", value: "off")
}
    

def setContact(contactMsg1){
    sendEvent(name: "contact", value: contactMsg1)
}
def setContacts(contactMsg2)
{sendEvent(name: "Contacts", value: contactMsg2)
}
def setWater(waterMsg1){
    sendEvent(name: "water", value: waterMsg1)
}
def setWaterSensors(waterMsg2){
    sendEvent(name: "Water_Sensors", value: waterMsg2)
}
def setMotion(motionMsg1){
    sendEvent(name: "motion", value: motionMsg1)
}
def setMotionSensors(motionMsg2){
    sendEvent(name: "Motion_Sensors", value: motionMsg2)
}
def setSound(soundMsg1){
    sendEvent(name: "sound", value: soundMsg1)
}
def setSoundSensors(soundMsg2){
    sendEvent(name: "Sound_Heard", value: soundMsg2)
}
def setPresence(presenceMsg1){
    sendEvent(name: "presence", value: presenceMsg1)
}
def setPresenceSensors(presenceMsg2){
    sendEvent(name: "Person_Detected", value: presenceMsg2)
}
def setLock(lockMsg1){
    sendEvent(name: "lock", value: lockMsg1)
}
def setLocks(lockMsg2){
    sendEvent(name: "Locks", value: lockMsg2)
}
def setTemperature(temperatureMsg1){
    sendEvent(name: "temperature", value: temperatureMsg1)
}
def setHumidity(humidityMsg1){
    sendEvent(name: "humidity", value: humidityMsg1)
}

def installed() {
}
